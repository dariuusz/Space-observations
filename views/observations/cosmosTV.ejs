<% layout("/layouts/boilerplate-home")%>
    <h1>All observations</h1>
    <div>
        <a href="/cosmosTV/new">Add observation</a>
    </div>
    <% for(let observation of observations) { %>
        <div class="card mb-5">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=observation.images[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= observation.title%>
                        </h5>
                        <p class="card-text">
                            <%= observation.analyse %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= observation.location %>
                            </small>
                        </p>
                        <% if(currentUser ) {%>
                            <a class="btn btn-primary" href="/cosmosTV/<%=observation._id %>">View
                                <%=observation.title%>
                            </a>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>

        <%}%>
<% layout("/layouts/boilerplate-home")%>
    <div class=" mt-5 mb-5 row offset-3 w-50">
        <div class=" card text-center ">
            <div class=" card-header">
                <h1 class="text-center">Add card</h1>
            </div>

            <div class="card-body">
                <div class="mt-3 col-6 offset-3">
                    <form action="/card/<%=card._id %>?_method=PUT " method="post" novalidate class="validated-form">
                        <div class="row mb-2 ">
                            <label for="cardType">Select card: </label>
                            <select name="" id="">
                                <option value="month">Card</option>
                                <option value="Mastercard" id="cardType" name="cardType">Mastercard</option>
                                <option value="Visa" id="cardType" name="cardType">Visa</option>
                            </select>
                        </div>

                        <div class="row mb-2">
                            <label for="cardNumber">Card number </label>
                            <input type="text" id="cardNumber" name="cardNumber" value="<%= observation.location %>"
                                required>
                        </div>
                        <div class="row mb-2">
                            <label for="cardOwner">Name on card </label>
                            <input type="text" id="cardOwner" name="cardOwner" type="date" required>
                        </div>


                        <div class="mb-2 row">
                            <div class="col">
                                <label for="month">Expiry month </label>
                                <select name="month" id="month" required>
                                    <option value="month" selected disabled>month</option>
                                    <option value="01">01</option>
                                    <option value="02">02</option>
                                    <option value="03">03</option>
                                    <option value="04">04</option>
                                    <option value="05">05</option>
                                    <option value="06">06</option>
                                    <option value="07">07</option>
                                    <option value="08">08</option>
                                    <option value="09">09</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                            </div>
                            <div class="mb-2 col ">
                                <label for="year">Expiry year </label>
                                <!-- <span>Expiry date</span> check how this will work -->
                                <select name="year" id="year" required>
                                    <option value="year" selected disabled>year</option>
                                    <option value="2022">2022</option>
                                    <option value="2023">2023</option>
                                    <option value="2024">2024</option>
                                    <option value="2025">2025</option>
                                    <option value="2026">2026</option>
                                    <option value="2027">2027</option>
                                    <option value="2028">2028</option>
                                </select>
                            </div>
                            <div class="mb-2 col">
                                <label for="securityNumber">CVC/CVV </label>
                                <input type="text" id="securityNumber" name="securityNumber" required>
                            </div>
                        </div>
                </div>


            </div>
            <div class="mb-3 ">
                <button class="btn btn-success">Add card</button>
            </div>
            </form>
        </div>
    </div>